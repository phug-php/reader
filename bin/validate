#!/usr/bin/php
<?php

$code = true;
$commands = [
    'phpunit',
    'phpcs',
    'php ./bin/validate-coverage'
];

chdir(dirname(__DIR__));


foreach ($commands as $command) {

    passthru($command, $code);

    if ($code !== 0) {

        echo "VALIDATION: FAILED ($code)", PHP_EOL;
        exit(1);
    }
}

echo "VALIDATION: SUCCESS!", PHP_EOL;